<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_colors"
    style="@style/ListViewCardStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout_container"
            style="@style/ChildActivityWrapperLinearLayoutStyle">

            <ImageView style="@style/SpeakerIconStyle" />

            <LinearLayout
                android:id="@+id/linear_layout_icon_holder"
                style="@style/ChildActivityTextStyleWrapperLinearLayoutStyle"
                android:layout_weight=".5">

                <ImageView
                    android:id="@+id/image_view_icon"
                    android:src="@drawable/color_icon"
                    style="@style/ChildActivityIconImageStyle"
                    />
            </LinearLayout>

            <LinearLayout style="@style/TextViewWrapperLinearLayoutStyle">

                <TextView
                    android:id="@+id/text_view_english_word"
                    style="@style/ChildActivityTextStyle"
                    android:text="Red"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/text_view_bengali_pronunciation"
                    style="@style/ChildActivityTextStyle"
                    android:text="Lāl"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/text_view_bengali_word"
                    style="@style/ChildActivityBengaliTextStyle"
                    android:text="লাল"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/color_overlay"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/linear_layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:alpha="0"></RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
